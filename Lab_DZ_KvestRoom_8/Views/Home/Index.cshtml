@using Lab_DZ_KvestRoom_8.Models.ViewModels.QuestRoomsViewModels;
@*@model IEnumerable<Lab_DZ_KvestRoom_8.Data.QuestRoom>
*@

@model IndexQuestRoomsViewModel
@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
        <style>
            .questPhoto{
                height: 200px;
                width: 250px;
                object-fit: cover;
                border-radius: 10px;
                margin-bottom: 10px;
            }

            .btn{
                height: 40px;
            }
            .btn-sm{
                padding-top: 6px;
                font-size: 16px;
            }
            .container{
                padding-left:0;
            }

            .card{
                width: 300px;
                padding: 5px;
                box-shadow: 0px 0px 15px 4px;
            }
        </style>
}

<form asp-action="Index" method="get">
    <div class="row mb-5">
        @*<div class="col-md-4 col-12">
            <input type="text" asp-for="LevelOfFear" class="form-control" />
        </div>*@
        <div class="col-md-auto">
            <select asp-for="LevelOfFear" class="p-2">
                <option value="-1">All level of fears</option>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
         <div class="col-md-auto">
            <select asp-for="LevelOfComplexity" class="p-2">
                <option value="-1">All level of complexity</option>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="col-md-auto">
            <button type="submit" class="btn btn-outline-success">Search</button>
        </div>
    </div>
</form>

<div class="row">

    @foreach (var item in Model.QuestRooms)
    {
        <div class="col col-xl-3 col-lg-4 col-md-6 col-12 mb-5">
            <div class="container text-center">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none" >
                    <div class="card">
                        <p>
                            @Html.DisplayFor(modelItem => item.Name)
                        </p>
                        <div class="photo">
                            <img class="questPhoto" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Logotype!))"
                            alt="@item.Name">
                        </div>
                    </div>
                </a> 
            </div>
        </div>
    }
</div>